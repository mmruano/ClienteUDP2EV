<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clientudp2ev.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label alignment="TOP_CENTER" text="Login" textAlignment="CENTER">
        <font>
            <Font size="55.0" />
        </font>
    </Label>

    <HBox prefHeight="30.0" prefWidth="250.0">
        <Label alignment="TOP_CENTER" text="Usuario:" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="20.0" right="20.0" top="3.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="nickname" alignment="CENTER">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
        </TextField>
    </HBox>

    <Button alignment="CENTER" onAction="#onLogin" text="ENTRAR" textAlignment="CENTER" />
    <Label fx:id="labelError" />
</VBox>
